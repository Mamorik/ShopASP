@page
@model Shop.Pages.AuthorizationModel

<a asp-action="Authorization">Авторизация</a>

<div class="col-md-6" style="margin-top:20%;">
    <div class="title-product">
        <h3>Log In</h3>
    </div>
    <!-- End title product -->
    <div class="contact-form check-out acc-login">
        <form method="post" asp-action="Delete">
            <div class="form-group">
                <label class="control-label" for="inputemail">Email</label>
                <input asp-for="user.mailUser" class="form-control" id="inputemail" placeholder="Mark Stevens" data-error="Please,leave us a message.">
            </div>
            <div class="form-group">
                <label class=" control-label" for="inputpass">Password</label>
                <input type="password" asp-for="user.passwordUser" class="form-control" id="inputpass" placeholder="******">
            </div>
            <div class="form-group">
                <input  asp-page-handler="delete" type="submit" class="btn link-button link-button-v2" value="Log In">
            </div>
            <div class="form-group">
                <a asp-page="/Registration" class="btn link-button link-button-v2" title="Checkout as guest">Sign Up</a>
            </div>
        </form>
    </div>


    <!-- End contact form -->
</div>